# --- Embeddings ---
# Use a local sentence-transformers model by default (no key required).
EMBEDDING_BACKEND=sentence_transformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- LLM ---
# Choose: openai | mock
LLM_BACKEND=mock
OPENAI_API_KEY=replace_me_if_using_openai
OPENAI_MODEL=gpt-4o-mini

# --- Retrieval ---
TOP_K=5
CHUNK_SIZE=800
CHUNK_OVERLAP=120

# --- Storage ---
INDEX_DIR=.cache/index
